<Page x:Class="ConferenceApp.Pages.PageMainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConferenceApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMainMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--<Image Source="\Resource\FON.jpg" Stretch="Fill" VerticalAlignment="Center"/>-->
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Name="btnToEvent" Content="Мероприятия" Style="{StaticResource MenuStyleBtn}" Click="btnToEvent_Click"/>
            <Button Name="btnToPerson" Content="Участники" Style="{StaticResource MenuStyleBtn}" Click="btnToPerson_Click"/>
            <Button Name="btnToJury" Content="Клиенты" Style="{StaticResource MenuStyleBtn}" Click="btnToJury_Click"/>
        </StackPanel>
    </Grid>
</Page>
